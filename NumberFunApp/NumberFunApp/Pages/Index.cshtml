@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-12">
        <h2> Enter Number </h2>
        <form method="post">
            
            <div class="form-group">
                <input name="number" type="text" class="form-control" id="firstname" placeholder="e.g. 7">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
            
        </form>
    </div>
     <hr>
</div>


@{

        <text>
        @number
        </text>
    }
}
